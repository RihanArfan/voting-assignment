@model ElectionViewModel

@{
    ViewData["Title"] = "Create Election";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <label class="form-label">Parties</label>
            <div class="mb-3">
                @for (var i = 0; i < Model.PartiesViewModel.Count; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="PartiesViewModel[i].Selected">
                        <label class="form-check-label">@Model.PartiesViewModel[i].Name</label>
                    </div>
                }
            </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a class="btn btn-outline-primary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>