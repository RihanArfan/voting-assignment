@{
    ViewData["Title"] = "Vote registered";
}

<div class="govuk-panel govuk-panel--confirmation">
    <h1 class="govuk-panel__title">
        Vote registered
    </h1>
    <div class="govuk-panel__body">
        You are voter<br><strong>~10,000</strong>
    </div>
</div>

<h2 class="govuk-heading-m">What happens next</h2>

<p class="govuk-body">
    Your vote has been registered successfully and it will be included in the count.
</p>

<p class="govuk-body">
    You can view live statistics for this election on our election public reports.
</p>

<a asp-controller="Reports" asp-action="Index" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
    View reports
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
    </svg>
</a>
